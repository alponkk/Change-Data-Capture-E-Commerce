{
  "name": "clickhouse-ecom-sink",
  "config": {
    "connector.class": "com.altinity.clickhouse.sink.connector.ClickHouseSinkConnector",
    "topics.regex": "mongo\\.ecom\\..*",
    "clickhouse.server.url": "http://clickhouse:8123",
    "clickhouse.server.user": "default",
    "clickhouse.server.password": "",
    "clickhouse.server.database": "default",
    "clickhouse.table.name": "${topic}",
    "clickhouse.table.engine": "MergeTree()",
    "clickhouse.table.order.by": "tuple()",
    "auto.create.tables": "true",
    "auto.evolve": "true",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.storage.StringConverter",
    "clickhouse.table.schema": "raw_data String",
    "clickhouse.table.columns.mapping": "raw_data=value",
    "exactlyOnceSemantics": "false",
    "buffer.count": "1000",
    "buffer.size": "1000000",
    "buffer.flush.time": "30",
    "thread.pool.size": "10",
    "tasks.max": "1",
    "clickhouse.datetime.timezone": "UTC",
    "clickhouse.retry.count": "3",
    "store.kafka.metadata": "true",
    "store.raw.data": "true",
    "clickhouse.table.partition.by": "",
    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true"
  }
} 